extends layout

block content
  .row.valign-wrapper
    .col.s4.offset-s4.valign.hoverable.z-depth-1.blue.lighten-5
      h1.center-align Siete
      .row
        .input-field.col.s12
          input#email.validate(type='email')
          |     
          label(for='email') Email

      .row
        .input-field.col.s12
            input#password.validate(type='password')
            |     
            label(for='password') Password
      .row
        .col.s4.offset-s4
          button.waves-effect.waves-light.btn(type='submit') LOGIN