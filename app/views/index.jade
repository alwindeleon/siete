      settings: {
      slidesToShow: 1,
      slidesToScroll: 1
      }
      }
      ],
      });
      });
  | 
  body
    header
      nav.z-depth-1
        .nav-wrapper.white
          a.brand-logo.center.black-text(href='/') DCSReGQ
          | 
          | 
          ul#nav-mobile.left.hide-on-med-and-down
            li
              a.black-text(href='/login') login
            | 
            li
              a.black-text(href='#') classes
            | 
            li
              a.black-text(href='#') about
    | 
    main
      .row
        .col.s12.l12
          #queue-carousel.slk
            if Object.keys(queuesAdvise).length > 0
              each val,key in queuesAdvise
                .col.l2.s12.center-align
                  .card-panel.headPadding1
                    strong
                      h5 #{key}
                  .card-panel.collection
                    ul.collection(id='#{key}')
                      -var i = 1;
                      each item in queuesAdvise[key]
                        li.collection-item.batch1 <b class="left">#{item.substring(0,2)}</b> #{item.substring(3)}
                        -i++;
                        -if(i > 15) break;

            if Object.keys(queuesEnlist).length > 0
              each val,key in queuesEnlist
                .col.l2.s12.center-align
                  .card-panel.headPadding2
                    strong
                      h5 #{key}
                  .card-panel.collection(id='#{key}')
                    ul.collection
                      -var i = 1;
                      each item in queuesEnlist[key]
                        li.collection-item.batch2 #{item}
                        -i++;
                        -if(i > 15) break;